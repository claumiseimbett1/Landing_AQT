# RewriteRule ^(.*)$ https://aquaten.com/$1 [L,R=301]

# Página de error personalizada (opcional)
# ErrorDocument 404 /404.html
# ErrorDocument 500 /500.html

# Proteger archivos sensibles
<FilesMatch "^(\.htaccess|\.htpasswd|\.git|\.env|robots\.txt|sitemap\.xml)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Desactivar listado de directorios
Options -Indexes

# Habilitar reescritura de URLs (si es necesario)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Redirección a index.html si el archivo no existe
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^\.]+)$ $1.html [NC,L]
</IfModule>

# Tipo MIME correcto para archivos
<IfModule mod_mime.c>
    AddType text/html .html
    AddType text/css .css
    AddType application/javascript .js
    AddType image/svg+xml .svg
    AddType application/json .json
    AddType video/mp4 .mp4
    AddType video/webm .webm
</IfModule>
